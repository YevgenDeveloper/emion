{
  "name": "standalone-local",
  "version": "0.1.0",
  "description": "A package to run all odyss√©e back alltogether",
  "main": "index.js",
  "scripts": {
    "test": "npx tsc && nyc ava ",
    "test:watch": "npx tsc -w & nyc ava --watch",
    "dev": "npx tsc && node dist/index.js",
    "dev:debug": "npx tsc && node --inspect-brk=9229 dist/index.js",
    "prod": "npx tsc && cross-env NODE_ENV=production node --no-warnings dist/index.js"
  },
  "prettier": {
    "semi": false
  },
  "author": "Arthur CARLI",
  "license": "MIT",
  "dependencies": {
    "@types/fs-extra": "5.1.0",
    "@types/jest": "24.0.15",
    "@types/node": "10.14.12",
    "@types/portscanner": "2.1.0",
    "@types/vorpal": "1.11.0",
    "cfonts": "2.4.3",
    "dotenv": "^8.1.0",
    "fs-extra": "7.0.1",
    "portscanner": "2.2.0",
    "simple-git": "1.121.0",
    "vorpal": "1.12.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "0.1.3",
    "@types/dotenv": "^6.1.1",
    "@types/sinon": "7.0.13",
    "ava": "2.2.0",
    "cross-env": "^6.0.0",
    "npm-check-updates": "^3.1.20",
    "nyc": "14.1.1",
    "prettier": "1.18.2",
    "sinon": "7.3.2",
    "source-map-support": "0.5.12",
    "tap-notify": "1.0.0",
    "ts-node": "8.3.0",
    "tslint": "^5.20.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "3.5.3"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "ava": {
    "files": [
      "src/**/*.test.ts"
    ],
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  }
}
