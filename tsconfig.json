{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "stripInternal": true,
    "esModuleInterop": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "certs",
    "coverage",
    "dist",
    "docker",
    "node_modules",
    "public",
    "script",
    "templates",
    "typings"
  ]
}
