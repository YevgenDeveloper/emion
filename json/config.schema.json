{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type":"object",
    "definitions": {
        "executionEnvironement": {
            "type":"object",
            "description": "An environement to launch with a command, the definition of its readyness condition and some optional dependencies",
            "properties": {
                "command": {
                    "description": "The command that need to be run for this environment",
                    "type":"string"
                },
                "arguments": {
                    "description": "The arguments of the command (each argument should be a different item array)",
                    "type":"array",
                    "items": {
                        "type":"string"
                    }
                },
                "readyWhen": {
                    "description": "The condition to assume the environement is ready",
                    "oneOf": [{
                        "type":"object",
                        "description": "The environement is ready when the port is up",
                        "additionalProperties": false,
                        "required": ["portIsUp"],
                        "properties": {
                            "portIsUp": {
                                "type":"number"
                            }
                        }
                    },
                    {
                        "type":"object",
                        "additionalProperties": false,
                        "description": "The environement is ready when the message (containing the port '${port}') is found",
                        "required": ["consoleMessageIsFound"],
                        "properties": {
                            "consoleMessageIsFound": {
                                "type":"string"
                            }
                        }
                    }]
                },
                "dependsOn":{
                    "description": "The environements the current environement depends upon to be able to run",
                    "type":"array",
                    "items": {
                     "type":"string"
                    }
                }
            }
        },
        "repo_config":{
            "type": "object",
            "additionalProperties": false,
            "required": ["url", "initCommand", "branch"],
            "properties": {
                "url": {
                    "description": "The path or url of the repository",
                    "type":"string"
                },
                "initCommand": {
                    "description": "The command to be launched to initialize this repository",
                    "type": "string"
                },
                "environments": {
                    "type":"object",
                    "description": "The environments that can be lauched with this repository",
                    "additionalProperties": {
                        "$ref": "#/definitions/executionEnvironement"
                    }
                },
                "branch": {
                    "description": "The branch to use for this repository",
                    "anyOf": [
                        {
                            "type":"string",
                            "enum": [
                                "master",
                                "develop",
                                "origin/master",
                                "origin/develop",
                                "current"
                            ]
                        },
                        {
                            "type": "string"
                        }
                    ]
                }
            }
        }
    },
    "additionalProperties": false,
    "properties": {
        "$schema":{
            "type":"string"
        },
        "repositories": {
            "description": "The list of used repositories",
            "type":"object",
            "additionalProperties": {
                "$ref": "#/definitions/repo_config"
            }
        },
        "repoPath": {
            "description": "The working directory where all the repositories will be cloned",
            "type":"string",
            "format": "url"
        }
    }
}
