{
	"$schema": "",
	"repositories":{
		"back": {
			"branch": "develop",
			"url": "",
			"initCommand": "npm install --build-from-source --sqlite=/usr/local/opt/sqlite/",
			"environments": {
				"back": {
					"command":"npm run setenv mock && npm run dev",
					"dependsOn": ["back/docker"],
					"readyWhen": {
						"consoleMessageIsFound": "Server Http Listening on port ${port}"
					}
				},
				"docker": {
					"command": "docker-compose down -f docker/docker-compose.yml && docker-compose up -f docker/docker-compose.yml",
					"readyWhen": {
						"portIsUp": 5432
					}
				}
			}
		},
		"front": {
			"branch": "develop",
			"url": "",
			"initCommand": "npm install",
			"environments": {
				"front": {
					"command":"npm run serve",
					"readyWhen": {
						"consoleMessageIsFound": " - Local:   http://localhost:${port}/"
					}
				}
			}
		},
		"e2e": {
			"branch": "develop",
			"url": "",
			"initCommand": "npm install --build-from-source --sqlite=/usr/local/opt/sqlite/",
			"environments":{
				"mock": {
					"command":"npm run mock",
					"readyWhen": {
						"consoleMessageIsFound": "RDO ready on http://localhost:{$port}"
					}
				},
				"e2e": {
					"command":"npm run e2e -- --tags ${tags}",
					"arguments": ["tags"]
				},
				"feature": {
					"command": "npm run feature ${featurename} -- --tags ${tags}",
					"arguments": ["tags", "featurename"]
				}
			}
		}
	},
	"repoPath": ""
}
